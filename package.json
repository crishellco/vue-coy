{
  "name": "coy",
  "version": "0.0.0-semantically-released",
  "description": "A CLI tool to help identify missing Vue component tests.",
  "license": "MIT",
  "source": "src/index.js",
  "main": "dist/main.js",
  "bin": "dist/main.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "rollup src/index.js --file dist/main.js --banner '#!/usr/bin/env node' --format 'cjs'",
    "test": "npm-run-all --print-label --parallel lint:* --parallel test:*",
    "test:unit": "jest src",
    "lint:js": "eslint src",
    "lint:js:fix": "yarn lint:js --fix",
    "lint:md": "remark . --frail",
    "generate:md": "remark . --output",
    "release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crishellco/vue-coy.git"
  },
  "bugs": {
    "url": "https://github.com/crishellco/vue-coy/issues"
  },
  "homepage": "https://crishellco.github.io/vue-coy/",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.19.1",
    "@babel/core": "7.20.7",
    "@babel/preset-env": "7.20.2",
    "@commitlint/cli": "17.3.0",
    "@form8ion/commitlint-config": "1.0.40",
    "@form8ion/remark-lint-preset": "4.0.2",
    "@vue/compiler-sfc": "^3.2.45",
    "babel-jest": "29.3.1",
    "chalk": "^4.0.0",
    "commander": "^9.4.1",
    "core-js": "3.26.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.30.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "27.1.7",
    "eslint-plugin-jest-formatting": "3.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "glob": "^8.0.3",
    "husky": "8.0.2",
    "jest": "29.3.1",
    "js-beautify": "1.14.7",
    "lint-staged": "13.1.0",
    "lodash": "^4.17.21",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.1",
    "remark-cli": "11.0.0",
    "remark-toc": "8.0.1",
    "rollup": "^3.9.0",
    "semantic-release": "19.0.5"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "pre-push": "yarn test:unit --coverage=false"
  },
  "lint-staged": {
    "*.{js}": [
      "eslint src",
      "git add"
    ]
  }
}
